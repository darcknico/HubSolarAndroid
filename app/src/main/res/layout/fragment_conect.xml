<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragmentConect"
    tools:context="com.ricardo.proyecto.conandard.tabs.ConectFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/linear_layout_padding"
            android:weightSum="4"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="33dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_layout_margin"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/card_cornerRadius"
                app:cardElevation="@dimen/card_cardElevation"
                app:contentPadding="@dimen/card_contentPadding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/linear_layout_padding">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/linear_layout_item_padding"
                        android:text="Ultima Lectura"
                        android:textAlignment="center"
                        android:textColor="@color/md_blue_grey_900"
                        android:textSize="@dimen/text_title_size" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="3dp"
                        android:layout_marginBottom="@dimen/linear_layout_margin_item"
                        android:layout_marginTop="@dimen/linear_layout_margin_item"
                        android:background="@color/md_grey_400"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/linear_layout_item_padding"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".75"
                            android:text="Hora Ultima Lectura"
                            android:textSize="@dimen/text_subtitle_size" />

                        <TextView
                            android:id="@+id/conectFechaText"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".25"
                            android:text="FECHORA"
                            android:textSize="@dimen/text_subtitle_size" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="3dp"
                        android:layout_marginBottom="@dimen/linear_layout_margin_item"
                        android:layout_marginTop="@dimen/linear_layout_margin_item"
                        android:background="@color/md_grey_400"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/linear_layout_item_padding"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".75"
                            android:text="Radiacion Solar (KW/m2)"
                            android:textSize="@dimen/text_subtitle_size" />

                        <TextView
                            android:id="@+id/conectRadiacionText"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".25"
                            android:text="0.55"
                            android:textSize="@dimen/text_subtitle_size" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="3dp"
                        android:layout_marginBottom="@dimen/linear_layout_margin_item"
                        android:layout_marginTop="@dimen/linear_layout_margin_item"
                        android:background="@color/md_grey_400"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/linear_layout_item_padding"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".75"
                            android:text="Potencia entregada"
                            android:textSize="@dimen/text_subtitle_size" />

                        <TextView
                            android:id="@+id/conectPotenciaText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25"
                            android:text="5.9 W"
                            android:textSize="@dimen/text_subtitle_size" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="3dp"
                        android:layout_marginBottom="@dimen/linear_layout_margin_item"
                        android:layout_marginTop="@dimen/linear_layout_margin_item"
                        android:background="@color/md_grey_400"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/linear_layout_item_padding"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".75"
                            android:text="Temperatura ambiente"
                            android:textSize="@dimen/text_subtitle_size" />

                        <TextView
                            android:id="@+id/conectTemperaturaText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25"
                            android:text="14ยบ"
                            android:textSize="@dimen/text_subtitle_size" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="3dp"
                        android:layout_marginBottom="@dimen/linear_layout_margin_item"
                        android:layout_marginTop="@dimen/linear_layout_margin_item"
                        android:background="@color/md_grey_400"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/linear_layout_item_padding"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".75"
                            android:text="Humedad ambiente"
                            android:textSize="@dimen/text_subtitle_size" />

                        <TextView
                            android:id="@+id/conectHumedadText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25"
                            android:text="38%"
                            android:textSize="@dimen/text_subtitle_size" />
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_layout_margin"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/card_cornerRadius"
                app:cardElevation="@dimen/card_cardElevation"
                app:contentPadding="@dimen/card_contentPadding">

                <RelativeLayout
                    android:id="@+id/relativeLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/card_relative_layout_padding">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:text="Sincronizar"
                        android:textSize="18sp" />

                    <ImageButton
                        android:id="@+id/conectBluetoohButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@mipmap/ic_bluetooth" />

                    <ImageButton
                        android:id="@+id/conectUsbButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center"
                        android:layout_toStartOf="@+id/conectBluetoohButton"
                        android:gravity="center"
                        android:src="@mipmap/ic_usb" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_layout_margin"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/card_cornerRadius"
                app:cardElevation="@dimen/card_cardElevation"
                app:contentPadding="@dimen/card_contentPadding">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/card_relative_layout_padding">

                    <ImageButton
                        android:id="@+id/conectImportButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/ic_import_export"
                        android:text="Button" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:text="Importar Datos"
                        android:textSize="18sp" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_layout_margin"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/card_cornerRadius"
                app:cardElevation="@dimen/card_cardElevation"
                app:contentPadding="@dimen/card_contentPadding">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/card_relative_layout_padding">

                    <ImageButton
                        android:id="@+id/conectCloudButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/ic_cloud"
                        android:text="Button" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="Subir Nube"
                        android:textSize="18sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</FrameLayout>
